<table class="table table-bordered">
    <thead>
        <tr>
            <th style= "background-color: #9a4f9f">Name</th>
            <th style= "background-color: #9a4f9f">Insurance</th>
            <th style= "background-color: #9a4f9f">Remote</th>
            <th style= "background-color: #9a4f9f">Location</th>
        </tr>
    </thead>
    <tbody>
        <% if @therapists.present? %>
            <% @therapists.each do |therapist| %>
            <tr>
                <td><%= therapist.name %></td>
                <td><%= therapist.insurance %></td>
                <td><%= therapist.remote ? 'Yes' : 'No' %></td>
                <td class="location"><%= therapist.location %></td>
            </tr>
            <% end %>
        <% else %>
            <tr>
                <td colspan="4">
                    <p class='no-results-message'>No results found - try removing some filters</p>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<div class="result-count">
  <%= "#{@therapists.size} result(s) found" if @therapists.present? %>
</div>